<?php
$lv->open();
$row=1;
echo $lv->gibZeilenZaehler . "<br>";
while( false <> $a = $lv->gibZeile )
{
  $num = count($a);
  if( $lv->gibZeilenZaehler < ($row + 1)  )
    echo "<p> $num Felder in Zeile $row: <br /></p>\n";
  $row++;
  if( $lv->gibZeilenZaehler < ($row + 2) )
  {
    for ($c=0; $c < $num; $c++)
      echo utf8_encode($a[$c]) . "<br />\n";
  }
}
?>
